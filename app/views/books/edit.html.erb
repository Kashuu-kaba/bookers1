<div class="edit">
  <h1 class="top-heading">Editing Book</h1>
  
    
  <%= form_with model:@book, local:true do |f| %>
    <% if @book.errors.any? %>
        <div class="alert alert-warning">
            <ul>
                <li>error!</li>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
        </div>
    <% end %>
    
    
    <p>Title</p>
    <%= f.text_field :title%>

    <p>Body</p>
    <%= f.text_area :body%>
    
    <p>
    <%= f.submit "Update Book"%>
    </p>
  <% end %>
  <%= link_to "Show", book_path(@book.id),class:"link" %>|<%= link_to "Back", books_path, class:"link"%>
</div>